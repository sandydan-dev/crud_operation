<!-- Header -->
<%- include('./partials/header.ejs')%>

<!-- Form data -->

<div class="container">
  <div class="row">
    <!-- create user data -->
    <div class="col-sm-6 mt-4">
      <h2 class="alert alert-success text-center">Add New User</h2>
      <form action="/users/update/<%= data._id%>" method="post">
        <!-- username -->
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            class="form-control"
            value="<%= data.username%>"
          />
        </div>

        <!-- email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            value="<%= data.email%>"
          />
        </div>

        <!-- mobile -->
        <div class="mb-3">
          <label for="mobile" class="form-label">Mobile</label>
          <input
            type="number"
            id="mobile"
            name="mobile"
            class="form-control"
            value="<%= data.mobile%>"
          />
        </div>

        <div class="d-grid mt-4">
          <form action="" method="get">
            <button type="submit" class="btn btn-success">Update User</button>
          </form>
          <form action="/users">
            <button class="btn btn-secondary mt-3" type="submit">
              Back To Home
            </button>
          </form>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Footer -->
<%- include('./partials/footer.ejs')%>
